<!DOCTYPE html>
<html lang="{{ (grav.language.getActive ?: grav.config.site.default_lang)|e }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e }} | {% endif %}{{ site.title|e }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
   
    <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png')|e }}" />
    <link rel="canonical" href="{{ page.canonical(true)|e }}" />
    <link rel="preconnect" href="https://fonts.googleapis.com"> 
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

{% endblock head %}

{% block stylesheets %}
    {% do assets.addCss('theme://css/simple-lightbox.min.css', 96) %}
    {% do assets.addCss('theme://css/list.css', 90) %}
    {% do assets.addCss('theme://line-awesome/css/line-awesome.min.css', 95) %}
{% endblock %}

{% block javascripts %}

    {% do assets.addJs('theme://js/simple-lightbox.min.js', 90) %}
    {% do assets.addJs('https://documentcloud.adobe.com/view-sdk/main.js', 90) %}
    {% do assets.addJs('theme://js/smoothscroll.min.js', {group:'bottom'}) %}
    {% do assets.addJs('theme://js/default.js', {group:'bottom'}) %}

{% endblock %}

{% block assets deferred %}
    {{ assets.css()|raw }}
    {{ assets.js()|raw }}
{% endblock %}
</head>
<body id="top" class="{{ page.header.body_classes|e }}">

	{% include 'partials/navigation.html.twig' %}

	<main>


		{% block body %}
   		<section id="body">
			{% block content %}{% endblock %}
	    	</section>
		{% endblock %}


{% block footer %}


{% endblock %}

	</main>

{% block bottom %}
    {{ assets.js('bottom')|raw }}
{% endblock %}

</body>
</html>
